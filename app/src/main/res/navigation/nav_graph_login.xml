<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/fragment_login">

    <include app:graph="@navigation/nav_graph_main" />

    <argument
        android:name="@string/arg_show_bottom_navigation"
        android:defaultValue="false"
        app:argType="boolean" />

    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.imdb.scene.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_movieFragment"
            app:destination="@+id/nav_graph_main" />
    </fragment>

</navigation>